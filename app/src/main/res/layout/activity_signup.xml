<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySignup">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup Activity"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="97dp"
        android:layout_height="84dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Shop Name"
        android:inputType="textPersonName"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintBottom_toTopOf="@+id/ownerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ownerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Owner Name"
        android:inputType="textPersonName"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintBottom_toBottomOf="@+id/shopImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shopImage" />

    <EditText
        android:id="@+id/contactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopImage" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/contactNumber" />

    <EditText
        android:id="@+id/vendorAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_baseline_my_location_24"
        android:ems="10"
        android:hint="Address"
        android:editable="false"
        android:inputType="none"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />

    <EditText
        android:id="@+id/shopType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Shop Type"
        android:inputType="textPostalAddress"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/vendorAddress" />

    <EditText
        android:id="@+id/shopTimings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Shop Timings"
        android:inputType="textPostalAddress"
        android:backgroundTint="@color/textfield_tint"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopType" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:paddingVertical="10dp"
        android:text="Signup"
        app:layout_constraintEnd_toEndOf="@+id/ownerName"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopTimings" />


</androidx.constraintlayout.widget.ConstraintLayout>