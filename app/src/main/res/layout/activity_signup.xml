    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/textfield_tint"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopImage" />

    <EditText
        android:id="@+id/vendorAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/textfield_tint"
        android:cursorVisible="false"
        android:drawableEnd="@drawable/ic_baseline_my_location_24"
        android:ems="10"
        android:focusable="false"
        android:hint="Address"
        android:inputType="none"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />

    <EditText
        android:id="@+id/shopType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/textfield_tint"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:hint="Shop Type"
        android:inputType="none"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/vendorAddress" />

    <EditText
        android:id="@+id/shopTimings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/textfield_tint"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:hint="Shop Timings"
        android:inputType="none"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/shopName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopType" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:paddingVertical="10dp"
        android:text="Signup"
        app:layout_constraintEnd_toEndOf="@+id/ownerName"
        app:layout_constraintStart_toStartOf="@+id/shopImage"
        app:layout_constraintTop_toBottomOf="@+id/shopTimings" />

